/**app.wxss**/
@import "./common/style/iconfont.wxss";
page, view, scroll-view, swiper, movable-area, cover-view, text, icon, rich-text,
progress, button, checkbox-group, checkbox, form, input, label, picker,
picker-view, radio-group, slider, switch, textarea, navigator, audio, image,
video, live-player, live-pusher, open-data, web-view {
    box-sizing: border-box;
}
page{
    background:#f5f5f5;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    overflow-y: auto;
}
image {
  width: 100%;
  height: 100%;
}

/*弹性布局*/

.flex-row {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  flex-direction: column;
}

.verticalHorizontal {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

/* 单行文字隐藏 */

.text-hidden {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 多行文字隐藏 */

.text-hidden-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 清除浮动 */

.clearfix:after {
  content: "";
  height: 0;
  line-height: 0;
  clear: both;
  visibility: hidden;
}

.clearfix {
  zoom: 1;
}
