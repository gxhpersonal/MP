/* pages/login/login.wxss */

image {
  width: 100%;
  height: 100%;
}

.icon {
  width: 0.8rem;
  height: 0.8rem;
  margin-right: 0.4rem;
}

.form {
  position: relative;
  width: 100%;
  padding: 28rpx;
  font-size: 28rpx;
}

.phone {
  border-bottom: 1px solid #e1e1e1;
  height: 110rpx;
  align-items: center;
}

.phone input {
  height: 100rpx;
  flex: 1;
}

.code {
  border-bottom: 1px solid #e1e1e1;
  height: 110rpx;
  align-items: center;
  justify-content: space-between;
}

.code-box {
  align-items: center;
}

.get-code {
  border: none;
  color: #4292ff;
  font-size: 26rpx;
}

.login-switch {
  height: 110rpx;
  align-items: center;
  justify-content: space-between;
  color: rgba(187, 187, 187, 1);
}

.login-btn {
  height: 90rpx;
  background: #e6002d;
  color: white;
  border-radius: 50px;
}

.login-wrap {
  width: 100%;
  padding: 0 10%;
  font-size: 40rpx;
}

.agreed {
  font-size: 24rpx;
  margin: 10rpx 10rpx;
}

.agreement {
  color: #e6002d;
}

/* 改变 */

.form .send-btn {
  color: #ffba00;
}

.login-wrap .btnActive {
  background: #ffba00 !important;
}

/*协议  */

.protocol-dialog {
  position: absolute;
  width: 100%;
  z-index: 19;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.4);
  padding: 40rpx 20rpx;
}

.protocol-dialog image {
  width: 100%;
  height: 100%;
}

.protocol-main {
  width: 690rpx;
  background: #fff;
  padding: 40rpx 20rpx;
  margin: auto;
  border-radius: 10rpx;
}

.closed {
  width: 215rpx;
  height: 60rpx;
  background: #e6002d;
  border-radius: 80rpx;
  font-size: 28rpx;
  color: #fff;
  margin: 20rpx auto;
}
